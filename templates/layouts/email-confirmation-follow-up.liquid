{% comment %} Description: View for member registraion confirmation page. {% endcomment %}
{% comment %} Primary layout: false {% endcomment %}

<div class="header-logo header-logo--light">
  <a href="{{ 'footer.home_url' | t }}">
    <div class="header-logo__logo sumofus-logo--negative"></div>
  </a>
</div>

<div class="center-content">
  <div class="center-content__one-column registration">

    <div class="center-content__central-square content">
      <h1 class="typography__highlight banner-text" style="padding: 30px 20px;">
        {% if errors == empty %}
          <span>{{ 'confirmation_mailer.follow_up_page.success' | t }}</span>
        {% else %}
          <span>{{ 'confirmation_mailer.follow_up_page.failure' | t }}</span>
        {% endif %}
      </h1>
      <h3 class="error-text">Success, no account was found associated with this link. Please email donations@sumofus.org for assistance.</h3>
      {% for error in errors %}
        <h3 class="error-text">{{ error }}</h3>
      {% endfor %}
      {% if errors == empty %}
        <h3 class="error-text">{{ 'confirmation_mailer.follow_up_page.member_management' | val: 'url', members_dashboard_url | t }}</h3>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .registration{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  .content{
    max-width: 80%;
  }
  .error-text{
    line-height: 1.7;
  }
  @media (max-width: 700px) {
    .banner-text{
      padding: 20px;
      font-size: 20px;
    }
  }
</style>
