  @media(max-width: 500px) {
    .beeline__arrow {
      display: none;
    }
    .bee-card {
      width: 100%;
      margin: 12px 0;
      cursor: normal;
    }
    .bee-card__body {
      min-height: 0;
      padding-bottom: 30px;
    }
    .beeline {
      height: auto;
      padding: 0;
    }
    .beeline__track {
      height: auto;
      padding: 0 2%;
      position: static;

      /* in the javascript, it sets these with an inline style */
      width: 96% !important;
      transform: none !important;
    }
    .bee-card:hover, .bee-card--hover {
      outline-width: 0;
    }
    .bee-card__title {
      height: auto;
    }
  }
</style>
